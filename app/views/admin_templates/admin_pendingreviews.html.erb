<h1>Admin Page: Pending Reviews</h1>

<table style="width:80%" border="1">
  <tr>

    <th>
      Review content
    </th>

    <th>
      Product
    </th>

    <th>
      Ratings
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
      Proof of Purchase
    </th>
    
    <th>
      Approval
    </th>

    <th>
      Details
    </th>
  </tr>

  <% @reviews.each do |review| %>
  <tr>

    <td>
      <%= review.review_content %>
    </td>

    <td>
      <%= review.product_id %>
    </td>

    <td>
      <%= review.ratings %>
    </td>

    <td>
      <%= time_ago_in_words(review.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(review.updated_at) %> ago
    </td>

    <td>
      <img src= "<%= review.proof %>" height="50" width="50">
    </td>

    <td>
      <button>
        Approve
      </button>
      <button>
        Reject
      </button>
    </td>

    <td>
      <a href="/reviews/<%= review.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
