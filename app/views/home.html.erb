<h1>Rezen</h1>

<div>
    <h2>Search</h2>
    <%= search_form_for @q, :url => "/reviews_search" do |f| %>
        <p class="lead">Narrow results:</p>
        <div class="form-group">
            <%= f.label :product_product_name_cont %>
            <%= f.search_field :product_name_cont, :class => "form-control", :placeholder => "Enter a product" %>
        </div>
        
        <%= f.submit :class => "btn btn-primary btn-block" %>
    <% end %>
    
</div>
<div>
    Sign Up
    Sign In
</div>
<div>
    
    <a href="/write_selectproduct">Write a review</a>
</div>

<table>
    <tr>
        <th>Product</th>
        <th>Comment</th>
        <th>Ratings</th>
        <th>Reviewer</th>
        <th>Upvote</th>
    </tr>
    
    <% @reviews.each do |review| %>
    <tr>
        <td>
            <a href="/reviews/<%= review.id %>">Product</a>
        </td>
        <td>
            <a href="/reviews/<%= review.id %>"><%= review.review_content %></a>
        </td>
        <td>
            <%= review.ratings %>
        </td>
        <td>
            <%= review.reviewer_id %> Review ID
        </td>
        <td>
            <%= review.count_votes %> Upvotes
        </td>
    </tr>
    <% end %>
    <%= paginate @reviews %>
    <%= page_entries_info @reviews %>
</table>