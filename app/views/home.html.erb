<div>
    
    <a href="/write_selectproduct">Write a review</a>
</div>

<table>
    <tr>
        <th>Product</th>
        <th>Comment</th>
        <th>Ratings</th>
        <th>Upvote</th>
    </tr>
    
    <% @reviews.each do |review| %>
    <tr>
        <td>
            <%= Product.where( {:id => review.product_id}).first.product_name %>
        </td>
        <td>
            <a href="/reviews/<%= review.id %>"><%= review.review_content %></a>
        </td>
        <td>
            <%= review.ratings %>
        </td>
        <td>
            <%= review.count_votes %>
        </td>
    </tr>
    <% end %>
    <%= paginate @reviews %>
    <%= page_entries_info @reviews %>
</table>