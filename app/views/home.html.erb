<div>
    <h2>Search</h2>
    <%= search_form_for @q, :url => "/products_search_results" do |f| %>
        <p class="lead">Narrow results:</p>
        <div class="form-group">
            <%= f.label :product_product_name_cont %>
            <%= f.search_field :product_name_cont, :class => "form-control", :placeholder => "Enter a product" %>
        </div>
        
        <%= f.submit :class => "btn btn-primary btn-block" %>
    <% end %>
    
