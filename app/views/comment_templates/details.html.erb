<h1>
  Comment #<%= @comment.id %> details
</h1>

<div>
  <div>
    <a href="/comments">
      Go back
    </a>
  </div>

  <div>
    <a href="/existing_comment_form/<%= @comment.id %>">
      Edit comment
    </a>
  </div>

  <div>
    <a href="/delete_comment/<%= @comment.id %>">
      Delete comment
    </a>
  </div>
</div>

<dl>
  <dt>
    Review
  </dt>
  <dd>
    <%= @comment.review_id %>
  </dd>

  <dt>
    Commenter
  </dt>
  <dd>
    <%= @comment.commenter_id %>
  </dd>

  <dt>
    Comment
  </dt>
  <dd>
    <%= @comment.comment %>
  </dd>

  <dt>
    Comment vote
  </dt>
  <dd>
    <%= @comment.comment_vote %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@comment.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@comment.updated_at) %> ago
  </dd>
</dl>

