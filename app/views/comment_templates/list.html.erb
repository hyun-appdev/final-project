<h1>
  Comment list
</h1>

<a href="/new_comment_form">
  Add a new comment
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Review
    </th>

    <th>
      Commenter
    </th>

    <th>
      Comment
    </th>

    <th>
      Comment vote
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @comments.each do |comment| %>
  <tr>
    <td>
      <%= comment.id %>
    </td>

    <td>
      <%= comment.review_id %>
    </td>

    <td>
      <%= comment.commenter_id %>
    </td>

    <td>
      <%= comment.comment %>
    </td>

    <td>
      <%= comment.comment_vote %>
    </td>

    <td>
      <%= time_ago_in_words(comment.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(comment.updated_at) %> ago
    </td>

    <td>
      <a href="/comments/<%= comment.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
