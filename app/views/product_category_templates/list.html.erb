<h1>
  Product category list
</h1>

<a href="/new_product_category_form">
  Add a new product category
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Product
    </th>

    <th>
      Category
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @product_categories.each do |product_category| %>
  <tr>
    <td>
      <%= product_category.id %>
    </td>

    <td>
      <%= product_category.product_id %>
    </td>

    <td>
      <%= product_category.category_id %>
    </td>

    <td>
      <%= time_ago_in_words(product_category.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(product_category.updated_at) %> ago
    </td>

    <td>
      <a href="/product_categories/<%= product_category.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
