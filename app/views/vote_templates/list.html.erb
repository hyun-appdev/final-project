<h1>
  Vote list
</h1>

<a href="/new_vote_form">
  Add a new vote
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      User
    </th>

    <th>
      Review
    </th>

    <th>
      Upvote
    </th>

    <th>
      Downvote
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @votes.each do |vote| %>
  <tr>
    <td>
      <%= vote.id %>
    </td>

    <td>
      <%= vote.user_id %>
    </td>

    <td>
      <%= vote.review_id %>
    </td>

    <td>
      <%= vote.upvote %>
    </td>

    <td>
      <%= vote.downvote %>
    </td>

    <td>
      <%= time_ago_in_words(vote.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(vote.updated_at) %> ago
    </td>

    <td>
      <a href="/votes/<%= vote.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
